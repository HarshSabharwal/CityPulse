<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RaiseComplaintActivity">

    <!-- Google Map Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/form_container" />

    <ImageView
        android:id="@+id/ivCenterMarker"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:src="@android:drawable/ic_menu_mylocation"
        app:tint="?attr/colorPrimary" />


    <!-- Form in a NestedScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:colorBackground"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Location Section -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilLocation"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address (Tap map or get current location)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etManualLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="3" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnGetLocation"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Use My Current Location"
                app:icon="@android:drawable/ic_menu_mylocation" />

            <!-- Photo Section -->
            <ImageView
                android:id="@+id/ivComplaintPreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:src="@tools:sample/backgrounds/scenic"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnTakePhoto"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Take Photo"
                app:icon="@android:drawable/ic_menu_camera" />

            <!-- Complaint Type Selection (Radio Buttons) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Select Complaint Type"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/colorPrimary" />

            <RadioGroup
                android:id="@+id/rgComplaintType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbGarbage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Garbage" />

                <RadioButton
                    android:id="@+id/rbPollutedWater"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Polluted Water" />

                <RadioButton
                    android:id="@+id/rbPothole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pothole" />

                <RadioButton
                    android:id="@+id/rbPipelineLeakage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pipeline Leakage" />
            </RadioGroup>

            <!-- Description Section -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDescription"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Description (Optional)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etComplaintDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="4" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnSubmitComplaint"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:text="Submit Complaint" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>